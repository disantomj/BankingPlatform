# Banking Platform Environment Variables
# Copy this file to .env and update the values

# Database Configuration
DB_USERNAME=postgres
DB_PASSWORD=change_this_password
DB_NAME=bankingdb
DB_HOST=localhost
DB_PORT=5432

# JWT Configuration - IMPORTANT: Generate a secure random string
JWT_SECRET=generate-a-secure-random-string-at-least-32-characters-long
JWT_EXPIRATION=864000000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=optional_redis_password

# Application Configuration
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=dev
DDL_AUTO=update
SHOW_SQL=true
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=DEBUG

# Optional: pgAdmin (Database Management Tool)
PGADMIN_EMAIL=admin@banking.local
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050

# Development Notes:
# 1. Generate a secure JWT secret using: openssl rand -base64 64
# 2. Use a strong database password in production
# 3. Consider using Docker secrets in production environments